def rmsd(v, w):
    """Caclulate the RMSD between two sets of coordinates"""
    d = v - w  # Difference (deviation)
    # RMSD:   root    mean    square 
    rmsd = np.sqrt(np.mean(np.square(d)))
    return rmsd


